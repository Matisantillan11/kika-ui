{
	"compilerOptions": {
		"outDir": "dist",
		"module": "esnext",
		"target": "es2016",
		"lib": ["dom", "es2015"],
		"sourceMap": true,
		"jsx": "react-jsx",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@library/*": ["./src/*"]
		}
	},
	"include": [".mjs", "./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": ["node_modules"]
}
